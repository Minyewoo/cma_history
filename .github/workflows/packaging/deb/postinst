#!/bin/bash
# 
# Deb package postinst script for API Server
#
############ CONFIGURATION SECTION ############
#
# Standart user, pass, database name for History service
#
user="crane_data_server"
pass="00d0-25e4-*&s2-ccds"
db="crane_data_server"
#
############ LIST OF SQL SCRIPTS TO BE EXECUTED ############
# list of SQL scripts to be executed in the format:
# 	<database> <user> <path to sql script> [description]
read -r -d '' scripts << EOF
    ""      "/etc/cma-history/create_user.sql" "Creating database user '$user'..."
    ""      "/etc/cma-history/create_db.sql" "Creating database '$db'..."
    ""      "/etc/cma-history/create_grant_user.sql" "Grant user '$user' to access database '$db'..."
    "$db"   "/etc/cma-history/create_tags.sql" "Creating 'tags' table..."
    "$db"   "/etc/cma-history/create_event.sql" "Creating 'event' table..."
    "$db"   "/etc/cma-history/create_event_view.sql" "Creating 'event_view' view..."
EOF

############ INSTALLATION ACTIONS ############
RED='\033[0;31m'
BLUE='\033[0;34m'
GRAY='\033[1;30m'
NC='\033[0m' # No Color
# echo -e ""
# echo -e "POST INST called with: \ntarg1: $1\ntarg2: $2\ntarg3: $3\ntarg4: $4" 
############ LOAD TO DB VIA PSQL ############
sudo useradd "$user"
echo "$pass" | sudo passwd "$user";
sudo usermod -a -G sudo "$user"
regex='\"([^\"]*?)\"[ \t]+\"([^\"]+?)\"([ \t]+\"([^\"]+?)\")?'
# regex='\"([^\"]*?)\"[ \t]+\"([^\"]*?)\"[ \t]+\"([^\"]+?)\"([ \t]+\"([^\"]+?)\")?'
while IFS= read -r row; do
    [[ $row =~ $regex ]]
    connect=${BASH_REMATCH[1]:=""}
    asUser=${BASH_REMATCH[2]:="${RED}not specified${NC}"}
    path=${BASH_REMATCH[3]:="${RED}not specified${NC}"}
    description=${BASH_REMATCH[5]:="Unnamed SQL script..."}
    echo ""
    echo -e "$description"
    echo -e "\t${GRAY}from file:${NC} $path"
    echo -e "\t${GRAY}connect to database:${NC} $connect"
    echo -e "\t${GRAY}as user:${NC} $asUser"
    if [ -z "$connect" ]; then
        sudo -i -u "$asUser" psql --echo-errors -a -f "$path"
    else
        sudo -i -u "$asUser" psql --echo-errors --dbname=$connect -a -f "$path"
    fi
done <<< "$scripts"
#
# Removing temporary user and files 
# sudo killall -u "$user"
sudo deluser "$user" -G sudo
sudo deluser --remove-home -f "$user"
sudo deluser --group "$user"
# rm ~/.pgpass